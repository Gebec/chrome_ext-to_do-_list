{
	"manifest_version": 2,
	"name": "TO DO LIST app",
	"version": "1.0",
	"description": "Tracking my daily tasks",
	"icons": {
		"128": "icon128.png",
		"32": "icon32.png",
		"16": "icon16.png"
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},

	"options_page": "options.html",

	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"storage",
		"notifications"
	]
}