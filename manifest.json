{
	"manifest_version": 2,
	"name": "TO DO LIST app",
	"version": "1.0",
	"description": "Tracking my daily tasks",
	"icons": {
		"128": "/img/icon128.png",
		"48": "/img/icon48.png",
		"16": "/img/icon16.png"
	},
	"browser_action": {
		"default_icon": "/img/icon16.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"storage",
		"notifications",
		"cookies"
	]
}